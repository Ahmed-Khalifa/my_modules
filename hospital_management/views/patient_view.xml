<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hospital_patient_view_tree" model="ir.ui.view">
        <field name="name">hospital_management.view.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Hospital Patient">
                <field name="name" string="Patient Name"/>
                <field name="gender" />
                <field name="age" />
                <field name="phone" />
                <field name="bloodType" />
            </tree>
        </field>
    </record>
    
    <record id="hospital_patient_view_tree" model="ir.ui.view">
        <field name="name">hospital_management.view.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Hospital Patient">
                <field name="name" string="Patient Name"/>
                <field name="gender" />
                <field name="age" />
                <field name="phone" />
                <field name="bloodType" />
            </tree>
        </field>
    </record>

    <record id="hospital_patient_view_form" model="ir.ui.view">
        <field name="name">hospital_management.view.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="patient">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="gender" />
                        <field name="age" />
                        <field name="phone" />
                    </group>
                    <group>
                        <field name="bloodType" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hospital_patient_search_view" model="ir.ui.view">
        <field name="name">hospital.management.search.view</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Patient Search View">
                <field name="name" string="Patient Name" filter_domain="['|','|',('name','ilike',self),('phone','ilike',self),('age','ilike',self)]"/>
                <field name="gender" />
                <field name="age" />
                <field name="phone" />
                <field name="bloodType" />
            </search>
        </field>
    </record>

    <record id="action_open_patients" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient!
            </p>
        </field>
    </record>

    <menuitem
        id="patient_sub_menu"
        name="Patient"
        action="action_open_patients"
        parent="patient_master_menu"
        sequence="0" />

</odoo>